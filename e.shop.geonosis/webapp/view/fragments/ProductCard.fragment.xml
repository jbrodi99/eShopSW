<core:FragmentDefinition
  xmlns="sap.m"
  xmlns:core="sap.ui.core">
  <CustomListItem type="Active" press=".onProductPress" class="productListItem">
    <VBox class="productCardContent" width="100%" alignItems="Center">
      <!-- Imagen -->
      <Image src="{model>/mainImage}" height="250px" densityAware="false" />

      <!-- Nombre -->
      <Text text="{model>/name}" class="productTitle" />

      <!-- Rating -->
      <HBox alignItems="Center" class="ratingContainer">
        <RatingIndicator value="{model>/rating}" maxValue="5" iconSize="1.2rem" />
      </HBox>

      <!-- Precio -->
      <HBox alignItems="End" class="priceContainer">
        <Text text="$ {model>/price}" class="priceText" />
        <Text text="{model>/currency}" class="currencyText" />
      </HBox>

      <!-- Etiqueta de estado (stock) -->
      <Text text="{model>/status}" class="stockLabel {model>/status}" />

      <!-- Botones -->
      <HBox justifyContent="SpaceBetween" width="100%" class="actionsContainer">
        <Button icon="sap-icon://cart-4" text="AÃ±adir" type="Emphasized" press="onCardCartPress"/>
        <Button icon="sap-icon://heart-2" type="Transparent" press="onFavoritPress" />
      </HBox>
    </VBox>
  </CustomListItem>
</core:FragmentDefinition>
