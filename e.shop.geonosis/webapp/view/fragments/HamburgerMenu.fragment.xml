<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
  <Popover
    id="hamburgerMenuPopover"
    placement="Bottom"
    showHeader="false"
    contentWidth="12rem"
    contentHeight="auto"
    class="sapUiContentPadding sapUiNoContentPadding">
    
    <VBox class="sapUiSmallPadding">
      <Button
        text="{i18n>headerCategorieBtn}"
        icon="sap-icon://grid"
        press=".onOpenMenu"
        type="Transparent"
        class="sapUiTinyMarginBottom" />
      <Button
        text="{i18n>headerMyCart}"
        icon="sap-icon://cart"
        press="onCartPress"
        type="Transparent" />
    </VBox>
  </Popover>
</core:FragmentDefinition>