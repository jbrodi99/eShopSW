<core:FragmentDefinition xmlns="sap.m" xmlns:f="sap.f" xmlns:core="sap.ui.core">
    <Toolbar height="5rem">
      <Image id="img-logo" src="{logoModel>/logo}" width="100px" height="40px"></Image>
      <ToolbarSpacer id="toolbar-spacer-header-left" />
      <SearchField 
          id="search-field-nav-bar" 
          width="40%" 
          placeholder="Buscar productos..." 
          liveChange="onSearch">
          <layoutData>
          <OverflowToolbarLayoutData priority="NeverOverflow" />
          </layoutData>
      </SearchField>
      <ToolbarSpacer id="toolbar-spacer-header-right" />

      <Button text="Categorias" press="onOpenMenu"/>
      <!-- <Button id="btn-nav-bar-menu" icon="sap-icon://menu2" tooltip="Mi cuenta" press="onProfilePress" width="3rem"/> -->
      <Button id="btn-nav-bar-cart" icon="sap-icon://cart" tooltip="Mi carrito" press="onCartPress" width="3rem" /> 
    </Toolbar>
</core:FragmentDefinition>