<mvc:View controllerName="com.geonosis.shop.e.shop.geonosis.controller.Categories"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.f"
    xmlns:l="sap.ui.layout"
    xmlns:card="sap.f.cards"
    xmlns="sap.m">


    <Page title="{i18n>title}" showHeader="false">
     <content>
      <core:Fragment fragmentName="com.geonosis.shop.e.shop.geonosis.view.Header" type="XML" />
      
      
      <Panel height="100%" >
        <headerToolbar>
        <OverflowToolbar
          height="3rem" >
          <Title  text="Categorias"/>
        </OverflowToolbar>
        </headerToolbar>
        <content>
          <VBox items="{categoryAndSubcategorieModel>/categories}" >
            <items>
              <Panel expandable="false" expanded="true" >
                <headerToolbar>
                  <OverflowToolbar>
                    <Title text="{categoryAndSubcategorieModel>name}" level="H2" />
                  </OverflowToolbar>
                </headerToolbar>

                
                <l:Grid
                  defaultSpan="XL2 L3 M4 S6"
                  width="100%"
                  hSpacing="2"
                  vSpacing="2"
                  content="{categoryAndSubcategorieModel>subcategories}">
                  <CustomListItem 

                  class="subcategoryBox"
                  type="Active"
                  press=".onSubcategoryPress">
                    <VBox
                      class="subcategoryBox"
                      >
                      <Image src="{categoryAndSubcategorieModel>image}" height="200px"/>
                      <Title text="{categoryAndSubcategorieModel>name}" level="H3" textAlign="Center"/>
                    </VBox>
                  </CustomListItem>

                </l:Grid>
                
              </Panel>
            </items>
          </VBox>
        </content>
      </Panel>
     </content>
    </Page>
</mvc:View>