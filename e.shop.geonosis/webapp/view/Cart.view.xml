<mvc:View controllerName="com.geonosis.shop.e.shop.geonosis.controller.Cart"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m">

  <Page showHeader="false">
   
      <ScrollContainer id="cart-header-container" class="mySticky"></ScrollContainer>
   
      <content>
        <VBox justifyContent="Center" alignItems="Center">
          <HBox width="80%">
            
            <VBox width="100%">
              <Panel headerText="Carrito" >
                <List items="{cart>/cartEntries}"
               >
                    <ObjectListItem
                      title="{cart>name}"
                      icon="{cart>mainImage}"
                      iconDensityAware="false"
                      
                      number="{
                        parts:[{path:'cart>price'}],
                        type: 'sap.ui.model.type.Currency',
                        formatOptions: {showMeasure: false}
                      }"
                      numberUnit="USD">

                      <firstStatus>
                        <ObjectStatus
                          text="{= 'Stock: ' + ${cart>stock} }"
                          state="{= ${cart>stock} > 0 ? 'Success' : 'Error' }" 
                          />
                          
                      </firstStatus>
                      <secondStatus>
                        <ObjectStatus text="cantidad: {cart>Quantity}" ></ObjectStatus>
                      </secondStatus>

                      
                      <attributes >
                        <ObjectAttribute text="{cart>description}" />
                        <ObjectAttribute text="Eliminar" press="onDeleteCartPress" active="true" />
                        <ObjectAttribute text="Agregar" press="onDeleteCartPress" active="true" />
                      
                      </attributes>

                      
                    </ObjectListItem>
                </List>
              </Panel>
            </VBox>


            <ScrollContainer id="myScrollContainer" width="100%">
              <VBox width="100%">
                <Panel headerText="Resumen de compra" >
                  <Text text="Total: $999" />
                  <Button text="Finalizar compra" type="Emphasized" />
                </Panel>
              </VBox>
            </ScrollContainer>
          </HBox>
        </VBox>
      </content>
  </Page>
</mvc:View>