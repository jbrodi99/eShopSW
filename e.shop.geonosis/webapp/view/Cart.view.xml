<mvc:View controllerName="com.geonosis.shop.e.shop.geonosis.controller.Cart"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:cssgrid="sap.ui.layout.cssgrid">

  <Page showHeader="false">
   
      <core:Fragment fragmentName="com.geonosis.shop.e.shop.geonosis.view.Header" type="XML" />
   
      <content>
   
      <cssgrid:CSSGrid
        gridTemplateColumns="{layoutModel>/gridTemplateColumns}"
        gridGap="1rem"
        width="100%">

        <!-- Panel izquierdo: productos -->
        <VBox >
          <Panel headerText="Productos en el carrito" >
            <List items="{products>/products}">
              <StandardListItem title="{products>name}" description="{products>description}" />
            </List>
          </Panel>
        </VBox>

        <!-- Panel derecho: resumen -->
        <ScrollContainer class="mySticky">
          <VBox >
            <Panel headerText="Resumen de compra" >
              <Text text="Total: $999" />
              <Button text="Finalizar compra" type="Emphasized" />
            </Panel>
          </VBox>
        </ScrollContainer>
      </cssgrid:CSSGrid>

    </content>
  </Page>
</mvc:View>
