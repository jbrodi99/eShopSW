<mvc:View xmlns:layout="sap.ui.layout" controllerName="com.geonosis.shop.e.shop.geonosis.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:f="sap.f"
    xmlns:card="sap.f.cards"
    xmlns:l="sap.ui.layout"
    xmlns:tnt="sap.tnt"
    xmlns:core="sap.ui.core"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}" showHeader="false">
    <ScrollContainer id="headerContainer"></ScrollContainer>
    <content>

    <Carousel 
      id="main-carousel-info-pictures"
      height="40%"
      showPageIndicator="false"
      loop="true"
      pages="{view>/images}">
      <VBox id="vbox-carousel-imgs" renderType="Bare" height="100%">
          <Image
              id="carousel-imgs"
              mode="Background"
              backgroundPosition="center"
              backgroundSize="contain"
              src="{view>src}"
              width="100%"
              height="100%" />
      </VBox>
    </Carousel>

    <Panel id="panel-carousel-prods-main"
      backgroundDesign="Transparent"
      class="sapUiSmallMarginTopBottom">
      <headerToolbar>
        <OverflowToolbar id="panel-toolbar-carousel-prods-main" 
          height="3rem" >
          <Title id="panel-toolbar-title-carousel-prods-main" text="Feacture Products"/>
          <ToolbarSpacer id="panel-space-center-prods-main"></ToolbarSpacer>
          <HBox  alignItems="Center" class="carousel-indicator-box"></HBox>
        </OverflowToolbar>
      </headerToolbar>
      <content>
        <Carousel
          id="carousel-feature-products"
          height="25rem"
          showPageIndicator="false"
          loop="true"
          backgroundDesign="Solid">
          <customLayout>
            <CarouselLayout visiblePagesCount="{settings>/carouselItemsPerPage}" scrollMode="VisiblePages"/>
          </customLayout>
        </Carousel>
      </content>
    </Panel>

      <VBox id="category-panels" items="{topSellingByCategoryModel>/categories}" class="sapUiNoMargin">
        <Panel headerText="{topSellingByCategoryModel>name}" backgroundDesign="Transparent" >
          <headerToolbar>
            <OverflowToolbar 
              height="3rem" >
              <Title  text="{topSellingByCategoryModel>name}"/>
              <ToolbarSpacer ></ToolbarSpacer>
              <HBox  alignItems="Center" class="carousel-indicator-box"></HBox>
            </OverflowToolbar>
          </headerToolbar>
          <Carousel
            height="25rem"
            showPageIndicator="false"
            loop="true"
            backgroundDesign="Solid">
            <customLayout>
            <CarouselLayout  visiblePagesCount="{settings>/carouselItemsPerPage}" scrollMode="VisiblePages"/>
            </customLayout>
            
          </Carousel>
        </Panel>
      </VBox>

      <Panel 
      backgroundDesign="Transparent"
      class="sapUiSmallMarginTopBottom">
      <headerToolbar>
        <OverflowToolbar 
          height="3rem" >
          <Title  text="Products"/>
          <ToolbarSpacer ></ToolbarSpacer>
          <HBox id="carousel-page-indicator" alignItems="Center" class="carousel-indicator-box"></HBox>
        </OverflowToolbar>
      </headerToolbar>
      <content>
        <Carousel id="carousel-card-item"
          height="25rem"
          showPageIndicator="false"
          loop="false"
          backgroundDesign="Solid">
          <customLayout>
            <CarouselLayout  visiblePagesCount="{settings>/carouselItemsPerPage}" scrollMode="VisiblePages"/>
          </customLayout>
        </Carousel>
      </content>
    </Panel>
    </content>
    </Page>
</mvc:View>