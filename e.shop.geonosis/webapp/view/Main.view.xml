<mvc:View controllerName="com.geonosis.shop.e.shop.geonosis.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}" showHeader="false">
    
    <Carousel 
    id="main-carousel-info-pictures"
    height="40%"
    showPageIndicator="false"
    loop="true"
    pages="{view>/images}">
    
    <VBox id="vbox-carousel-imgs" renderType="Bare" height="100%">
        <Image
            id="carousel-imgs"
            mode="Background"
            backgroundPosition="center"
            backgroundSize="contain"
            src="{view>src}"
            width="100%"
            height="100%" />
    </VBox>
    </Carousel>

  <List id="productList" items="{productsModel>/products}">
    <StandardListItem 
      id="std-list"
      title="{productsModel>name}" 
      description="{productsModel>description}" 
      info="{productsModel>price}" />
  </List>


