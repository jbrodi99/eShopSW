<mvc:View controllerName="com.geonosis.shop.e.shop.geonosis.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:f="sap.f"
    xmlns:card="sap.f.cards"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}" showHeader="false">
    
    <Carousel 
    id="main-carousel-info-pictures"
    height="40%"
    showPageIndicator="false"
    loop="true"
    pages="{view>/images}">
      <VBox id="vbox-carousel-imgs" renderType="Bare" height="100%">
          <Image
              id="carousel-imgs"
              mode="Background"
              backgroundPosition="center"
              backgroundSize="contain"
              src="{view>src}"
              width="100%"
              height="100%" />
      </VBox>
    </Carousel>

    <Panel id="panel-carousel-prods-main"
    backgroundDesign="Transparent"
    class="sapUiMediumMarginTopBottom">
      <headerToolbar>
        <OverflowToolbar id="panel-toolbar-carousel-prods-main" 
          height="3rem" >
          <Title id="panel-toolbar-title-carousel-prods-main" text="Products"/>
          <ToolbarSpacer id="panel-space-center-prods-main"></ToolbarSpacer>
          <HBox id="carousel-page-indicator" alignItems="Center"></HBox>
        </OverflowToolbar>
      </headerToolbar>
      <content>
        <Carousel id="carousel-card-item"
          height="25rem"
          showPageIndicator="false"
          loop="true"
          pages="{productsModel>/products}"
          backgroundDesign="Solid"

          beforePageChanged="onCarouselNavigate">
          <customLayout>
            <CarouselLayout id="carousel-layout-cards-main" visiblePagesCount="6"/>
          </customLayout>
          <f:Card id="card-item-carousel-main"
            height="100%"
            headerPosition="Bottom">
            <f:content>
              <VBox id="vbox-card-item-content-main"
                class="imageContainer"
                >
                <Image id="img-poly-card-item"
                  src="{productsModel>image}"
                  height="200px"
                  >
                </Image>
                <Text id="title-poly-card-item" text="{productsModel>name}"></Text>
                <Text id="descr-poly-card-item" text="{productsModel>descrption}"></Text>
                <Text id="price-poly-card-item" text="{productsModel>price}"></Text>
                <Text id="curr-poly-card-item" text="{productsModel>currency}"></Text>
                <Text id="stock-poly-card-item" text="{productsModel>stock}"></Text>
                <Button id="btn-add-poly-card-item" text="Add to cart"></Button>
                <Button id="btn-buy-poly-card-item" text="But now"></Button>
              </VBox>
            </f:content>
          </f:Card>
        </Carousel>
      </content>
    </Panel>
    </Page>
</mvc:View>