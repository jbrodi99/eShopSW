<mvc:View controllerName="com.geonosis.shop.e.shop.geonosis.controller.Products"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:grid="sap.ui.layout.cssgrid"
    xmlns:f="sap.f">
  <Page showHeader="false">
    <content>

      <core:Fragment fragmentName="com.geonosis.shop.e.shop.geonosis.view.fragments.Header" type="XML" />

      <Panel id="panelForGridList" backgroundDesign="Transparent">
        <headerToolbar>
          <Toolbar height="3rem">
            <Title text="Producto por categoria" />
            <Text text="xx productos"></Text>
            <ToolbarSpacer ></ToolbarSpacer>
            <Button text="filtrar"></Button>
            <Button text="ordenarBy"></Button>
          </Toolbar>
        </headerToolbar>

        <!-- Envolver en HBox para centrar -->
        <HBox justifyContent="Center" >
          <!-- VBox con ancho limitado -->
          <VBox width="80%">
            <f:GridList id="gridList" items="{filteredProducts>/products}">
              <f:customLayout>
                <grid:GridBoxLayout boxMinWidth="18rem" />
              </f:customLayout>

              <f:GridListItem>
                <VBox class="sapUiSmallMargin" height="28rem">
                  <layoutData>
                    <FlexItemData growFactor="1" shrinkFactor="0" />
                  </layoutData>
                  <Title text="{filteredProducts>name}" wrapping="true" />
                  <Label text="{filteredProducts>description}" wrapping="true" />
                </VBox>
              </f:GridListItem>
            </f:GridList>
          </VBox>
        </HBox>
      </Panel>

    </content>
  </Page>
</mvc:View>
