<core:FragmentDefinition xmlns="sap.m" xmlns:tnt="sap.tnt" xmlns:core="sap.ui.core">
    <tnt:ToolHeader height="5rem" >
      <Image id="img-logo" src="{logoModel>/logo}" width="6rem" height="2rem">
        <layoutData>
          <OverflowToolbarLayoutData priority="NeverOverflow" />
        </layoutData>
      </Image>
      <ToolbarSpacer id="toolbar-spacer-header-left" />
      <VBox width="40%">
        <SearchField 
            id="search-field-nav-bar" 
            width="100%" 
            placeholder="Buscar productos..." 
            liveChange="onSearch">
        </SearchField>
        <IconTabHeader >
          <items>
            <IconTabFilter text="Categories"></IconTabFilter>
          </items>
        </IconTabHeader>
      </VBox>
      <ToolbarSpacer id="toolbar-spacer-header-right" />
      <Button id="btn-nav-bar-menu" icon="sap-icon://menu2" tooltip="Mi cuenta" press="onProfilePress" width="3rem"/>
      <Button id="btn-nav-bar-cart" icon="sap-icon://cart" tooltip="Mi carrito" press="onCartPress" width="3rem"/>
    </tnt:ToolHeader>
</core:FragmentDefinition>